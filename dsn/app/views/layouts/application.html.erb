        <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head><!--/head-->
    <body>
        <header class="navbar navbar-inverse navbar-fixed-top wet-asphalt" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="<%=root_path%>">Debate Social Network</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href="<%=root_path%>">Home</a></li>
                        <li><%= link_to "Debates", debates_path %></li>
                        <li><a href="about-us.html">Articles</a></li>
                        <li><a href="about-us.html">About Us</a></li>
                        <%if user_signed_in?%>
                        <li><a class="btn btn-large btn-primary"><%= current_user.email.split("@").at(0) %></a></li>
                        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-large btn-primary" %></li>
                        <%else%>
                        <li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-large btn-primary" %></li>
                        <li><%= link_to "Sign In", new_user_session_path, class: "btn btn-large btn-primary"%></li>
                        <%end%>
                    </ul>
                </div>
                <%unless alert.nil?%>
                  <div class="alert alert-danger">
                      <button type="button" class="close" data-dismiss="alert">&times;</button>
                      <%=alert%>
                  </div>
                <%end%>
                <%unless notice.nil?%>
                  <div class="alert alert-success">
                      <button type="button" class="close" data-dismiss="alert">&times;</button>
                      <%=notice%>
                  </div>
                <%end%>
        </header><!--/header-->   

        <%if current_page?(root_path)%>
          <%= yield %>
        <%else%>
          <section class="container">
              <%= yield %>
          </section>
        <%end%>

        <section id="bottom" class="wet-asphalt">
